{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"jsx": "react",
		"sourceMap": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"baseUrl": ".",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["data/**/*"]
}
